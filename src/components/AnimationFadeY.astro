<div class="opacity-0 translate-y-8" animation-fade-y>
  <slot />
</div>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.utils.toArray("[animation-fade-y]").forEach((element) => {
    gsap.to(element as HTMLElement, {
      opacity: 1,
      y: 0,
      duration: 2,
      ease: "power2.out",
      scrollTrigger: {
        markers: false,
        trigger: element as HTMLElement,
        start: "20% bottom",
        end: "bottom top",
        toggleActions: "play none none reverse",
      },
    });
  });
</script>
