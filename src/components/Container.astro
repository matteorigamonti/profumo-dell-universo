---
interface Props {
  size?: "sm" | "md" | "lg" | "xl" | "hero";
}

const { size = "md" } = Astro.props;
---

<div
  class:list={[
    "mx-auto px-4 w-full",
    {
      "max-w-[977px]": size === "sm",
      "max-w-[1200px]": size === "md",
      "max-w-[1360px]": size === "lg",
      "max-w-[1440px]": size === "xl",
      "max-w-[720px] lg:max-w-[1360px]": size === "hero",
    },
  ]}
>
  <slot />
</div>
