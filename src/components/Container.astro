---
interface Props {
    size?: 'small' | 'medium' | 'large'
}

const { size = 'medium' } = Astro.props
---

<div
    class:list={[
        'mx-auto px-4',
        {
            'max-w-[977px]': size === 'small',
            'max-w-[1200px]': size === 'medium',
            'max-w-[1360px]': size === 'large',
        },
    ]}
>
    <slot />
</div>
