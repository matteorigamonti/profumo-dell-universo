---
interface Props {
  tag?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  size?: "xxxl" | "xxl" | "xl" | "lg" | "md" | "sm" | "xs" | "xxs";
  italic?: boolean;
  weight?: "normal" | "bold";
  className?: string;
  uppercase?: boolean;
  target?: string;
}

const {
  tag = "h3",
  size = "sm",
  italic = false,
  weight = "normal",
  className = "",
  uppercase = false,
  target = "",
} = Astro.props;
const Tag = tag;
---

<Tag
  data-target={target ? target : undefined}
  class:list={[
    "font-serif leading-tight",
    className,
    {
      "text-[4.5rem] lg:text-xxxl": size === "xxxl",
      "text-[4rem] lg:text-xxl": size === "xxl",
      "text-[3.25rem] lg:text-xl": size === "xl",
      "text-lg": size === "lg",
      "text-md": size === "md",
      "text-sm": size === "sm",
      "text-xs": size === "xs",
      "text-xxs": size === "xxs",
      "font-bold": weight === "bold",
      italic: italic,
      uppercase: uppercase,
    },
  ]}
>
  <slot />
</Tag>
