---
interface Props {
  size?: number;
  fill?: "yellow" | "blue" | "dark-blue" | "red";
}
const { size = 24, fill = "yellow" } = Astro.props;
---

<svg
  width={size + "px"}
  height={size + "px"}
  xmlns="http://www.w3.org/2000/svg"
  fill="none"
  viewBox="0 0 24 24"
  ><path
    class:list={[
      {
        "fill-olive-soft": fill === "yellow",
        "fill-blue-royal": fill === "blue",
        "fill-red": fill === "red",
        "fill-indigo-dark": fill === "dark-blue",
      },
    ]}
    fill="#BFC64D"
    fill-rule="evenodd"
    d="M12 24c0-6-6-12-12-12 6 0 12-6 12-12 0 6 6 12 12 12-6 0-12 6-12 12Z"
    clip-rule="evenodd"></path></svg
>
